<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <!-- 配置界面TextView -->
    <style name="ConnTextViewStyle" parent="AppTheme">
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 配置界面TextView -->
    <style name="ConnLinear" parent="AppTheme">
        <item name="android:paddingTop">10dp</item>
    </style>

    <!-- CheckBox样式 -->
    <style name="CheckBoxStyle" parent="AppTheme">
        <item name="android:colorControlNormal">@color/black</item>
        <item name="android:colorControlActivated">@color/blue</item>
    </style>

    <style name="ConnEditView" parent="@style/ConnTextViewStyle">
        <item name="android:background">@drawable/editview_border</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <!-- 主界面 -->
    <style name="MainPageBorder" parent="@style/ConnEditView">
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- 适配器单项信息 -->
    <style name="ClientAdapter" parent="MainPageBorder">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
